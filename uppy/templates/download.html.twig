{% extends "base.html.twig" %}

{% block brand %}
    <a class="brand" href='{{ hostName }}/upload'>UPPY</a>
{% endblock %}

{% block content %}
    <div class="container">
    	{% if file %}
		   	{%  if  file.isImage()   %}
	    		<img class="img-polaroid" src="{{ file.getPathThumbs() }}"">
			{% endif %}
	        <p><strong>Файл</strong> - {{ file.name }}</p>
	        <p>{{ file.getSize() }}</p>
	        <p>{{ file.dateLoad }}</p>
	        <p>{{ file.key }}</p>
	        <a href="{{  file.getDownloadLink( hostName )  }}" title="{{ file.name }}">Скачать</a>
		{% else %}
		    <h1>Файл не найден!</h1>
		{% endif %}
    </div>
{% endblock %}